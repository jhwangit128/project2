<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <% include ../partials/header.ejs %>
    <div class="container outer-container">
      <div class="post-btn">
      <a href="/posts/new" class="waves-effect waves-light btn pink accent-3">Add a Post</a>
      </div>
      <table class="responsive-table highlight">
          <tr>
            <th>title</th>
            <th>username</th>
          </tr>
          <% for (let i = 0; i < posts.length; i++) { %>
          <tr>
            <td>
              <a class="community-title" href="/posts/<%=posts[i].id%>"><%=posts[i].title%></a>
            </td>
            <td>
              <%=posts[i].username%>
            </td>
            <td>
              <form action="/posts/<%=posts[i].id%>?_method=DELETE" method="POST">
                <input type="submit" value="DELETE"/>
              </form>
              <a class="edit edit-post" href="/posts/<%=posts[i].id%>/edit">EDIT</a>
            </td>
          </tr>
        <% } %>
      </table>
    </div>
    <% include ../partials/footer.ejs %>
  </body>
</html>
