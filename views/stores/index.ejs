<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <% include ../partials/header.ejs %>
    <div class="outer-container">
      <!-- <a href="/">Back to Home Page</a> --><br />
      <h5>Behavior Management Products for Cats</h5><br /><br /><br />
      <% if(currentUser) { %>
        <div class="store-btn">
          <a href="/stores/new" class="waves-effect waves-light btn pink accent-3">ADD</a>
        </div>
        <% } else { %>
      <% } %>
      <div class="items-container">
        <% for(let i = 0; i < stores.length; i++) { %>
          <div class="item-container">
            <div class="item-img">
                <a href="/stores/<%=stores[i].id%>"><img src=<%=stores[i].img%> /></a>
            </div>
            <div class="item-text">
              <span class="item-name"><%=stores[i].name%></span><br />
              <span class="item-price">$ <%=stores[i].price%></span>
            </div>
            <div class="edit-delete-store">
              <% if(currentUser) { %>
                <a class="edit" href="/stores/<%=stores[i].id%>/edit">EDIT</a>
                <form action="/stores/<%=stores[i].id%>?_method=DELETE" method="POST">
                  <input type="submit" value="DELETE">
                </form>
                <% } else { %>
              <% } %>
          </div>
          </div>
        <% } %>
      </div>
    </div>
    <% include ../partials/footer.ejs %>
  </body>
</html>
